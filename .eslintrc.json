{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "globals": {
        "React": true,
        "JSX": true,
        "module": true,
        "require": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            0
        ],
        "semi": [
            2,
            "always"
        ],
        "@typescript-eslint/semi": [
            2,
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ]
    }
}